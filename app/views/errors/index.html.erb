<div class="error-wrapper" id="error<%= @error[:code] %>">
  <div class="error-description">
    <div class="ops-text">
      <%= t("error.ops") %>
    </div>
    <div class="description-text">
      <%= @error[:suggestion] %>
    </div>
    <% if @error[:explanation] %>
      <div class="explanation-text">
        <%= @error[:explanation] %>
      </div>
    <% end %>
    <div class="error-logo-all" id="error<%= @error[:code] %>-logo"></div>
    <div class="title-text">
      <%= "#{t('default.app.error').upcase} #{@error[:code]} â€“ #{@error[:message]}" %>
    </div>
    <div class="context-info text-muted fs-xxs mt-2">
      <%= @error[:context_info] %>
    </div>
  </div>
</div>
